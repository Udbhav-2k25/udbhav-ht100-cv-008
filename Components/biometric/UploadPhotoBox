import React, { useState, useRef } from 'react';
import { Upload, Camera, X, Check } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';

export default function UploadPhotoBox({ onPhotoSelected, currentPhoto }) {
  const [preview, setPreview] = useState(currentPhoto || null);
  const [dragging, setDragging] = useState(false);
  const fileInputRef = useRef(null);

  const handleFileSelect = (file) => {
    if (file && file.type.startsWith('image/')) {
      const reader = new FileReader();
      reader.onload = (e) => {
        setPreview(e.target.result);
        onPhotoSelected(file);
      };
      reader.readAsDataURL(file);
    }
  };

  const handleDrop = (e) => {
    e.preventDefault();
    setDragging(false);
    const file = e.dataTransfer.files[0];
    handleFileSelect(file);
  };

  const handleClear = () => {
    setPreview(null);
    onPhotoSelected(null);
    if (fileInputRef.current) fileInputRef.current.value = '';
  };

  return (
    <div className="space-y-4">
      <label className="text-sm font-medium text-gray-300">Face Photo *</label>
      <div
        onDrop={handleDrop}
        onDragOver={(e) => { e.preventDefault(); setDragging(true); }}
        onDragLeave={() => setDragging(false)}
        className={`relative border-2 border-dashed rounded-2xl transition-all ${
          dragging 
            ? 'border-cyan-400 bg-cyan-500/10' 
            : preview 
            ? 'border-green-500/50 bg-green-500/5'
            : 'border-cyan-500/30 bg-[#1a1a2e]/30 hover:border-cyan-400/50'
        }`}
      >
        <input
          ref={fileInputRef}
          type="file"
          accept="image/*"
          onChange={(e) => handleFileSelect(e.target.files[0])}
          className="hidden"
        />

        <AnimatePresence mode="wait">
          {preview ? (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              exit={{ opacity: 0 }}
              className="relative"
            >
              <img
                src={preview}
                alt="Preview"
                className="w-full h-64 object-cover rounded-2xl"
              />
              <div className="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent rounded-2xl"></div>
              <div className="absolute top-4 right-4 flex gap-2">
                <button
                  onClick={handleClear}
                  className="p-2 bg-red-500/80 hover:bg-red-500 rounded-lg text-white transition-colors"
                >
                  <X className="w-4 h-4" />
                </button>
              </div>
              <div className="absolute bottom-4 left-4 flex items-center gap-2 text-white">
                <Check className="w-5 h-5 text-green-400" />
                <span className="text-sm font-medium">Photo Ready</span>
              </div>
            </motion.div>
          ) : (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              exit={{ opacity: 0 }}
              className="flex flex-col items-center justify-center py-12 px-6 cursor-pointer"
              onClick={() => fileInputRef.current?.click()}
            >
              <div className="relative mb-4">
                <div className="absolute inset-0 bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full blur-xl opacity-30"></div>
                <div className="relative bg-[#1a1a2e] p-6 rounded-full border border-cyan-500/30">
                  <Camera className="w-8 h-8 text-cyan-400" />
                </div>
              </div>
              <h3 className="text-lg font-semibold text-white mb-2">Upload Face Photo</h3>
              <p className="text-sm text-gray-400 text-center max-w-xs mb-4">
                Drag & drop or click to select a clear, front-facing photo
              </p>
              <button
                type="button"
                className="px-6 py-2 bg-gradient-to-r from-cyan-500 to-purple-500 text-white rounded-lg text-sm font-medium hover:shadow-lg hover:shadow-cyan-500/50 transition-all"
              >
                <Upload className="w-4 h-4 inline mr-2" />
                Choose File
              </button>
            </motion.div>
          )}
        </AnimatePresence>
      </div>
    </div>
  );
}
